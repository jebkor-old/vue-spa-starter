{
  "compileOnSave": false,
  "compilerOptions": {
      "experimentalDecorators": true,
      "baseUrl": "./",
      "paths": {
          "@root*": [ "./src*"],
          "@declarations*": [ "./src/ts/declarations*" ],
          "@models*": [ "./src/ts/model*" ],
          "@services*": [ "./src/ts/services*" ],
          "@types*": [ "./src/ts/types*" ],
          "@utilities*": [ "./src/ts/utilities*" ],
          "@vendor*": [ "./src/ts/vendor*" ],
          "@vue*": [ "./src/ts/vue*" ]
      },
      "allowJs": true,
      "sourceMap": true,
      "strict": false,
      "module": "es2015",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "target": "es5",
      "importHelpers": true,
      "lib": [
          "es5",
          "es6",
          "es2015",
          "es2016",
          "dom"
      ],
      "typeRoots": [
          "node_modules/@types"
      ]
  },
  "include": [
      "./src/ts/**/*",
      "./src/vue/**/*"
  ],
  "exclude": [
      "./src/js/**/*"
  ]
}